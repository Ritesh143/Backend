#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('backend:server');
var http = require('http');
var { readFile, writeFile } = require('../services/dataIOService');
const { dataPath } = require('../const/dataPath');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);


const io = require('socket.io')(server, {
  cors: {
    origin: 'http://localhost:4200',
    optionsSuccessStatus: 200
  }
});

io.on('connection', (socket) => {

  //write and update poll Data
  socket.on('savepolldata', (savepolldata) => {
    writeFile(dataPath.POLLDATA, savepolldata)
      .then((data) => {
        io.emit('polldataUpdate', savepolldata);
      })
      .catch(err => res.status(400).send(err));
    console.log('data sent');
  });

  // sends poll data
  socket.on('getpolldata', () => {
    readFile(dataPath.POLLDATA)
      .then((data) => {
        io.emit('polldataUpdate', data);
      })
      .catch(err => res.status(400).send(err));
  });
});


/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
